<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.blogserver.mapper.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.example.blogserver.entity.Article">
        <id column="articleID" property="articleID" />
        <result column="title" property="title" />
        <result column="subtitle" property="subtitle" />
        <result column="cover" property="cover" />
        <result column="id" property="id" />
        <result column="category_id" property="categoryId" />
        <result column="likes" property="likes" />
        <result column="content" property="content" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="deleted" property="deleted" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        articleID, title, subtitle, cover, id, category_id, likes, content, created_at, updated_at, deleted
    </sql>

</mapper>
